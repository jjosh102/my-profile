<div class="container mx-auto p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        @if (_githubProjects is not null && _githubProjects.Any())
        {
            @foreach (var project in _githubProjects)
            {
                <div class="border border-gray-200 dark:border-[#30363d] bg-white dark:bg-transparent shadow-sm rounded-lg p-4
                           hover:border-blue-400 dark:hover:border-[#58a6ff]/50 
                           hover:shadow-md hover:shadow-blue-100 dark:hover:shadow-[#58a6ff]/10
                           transition-all duration-300
                           transform scale-100 hover:scale-102" 
                     @onclick="() => NavigateToProjectDetails(project.Id)">
                    <div class="w-full">
                        <div class="mb-1">
                        </div>

                            @if (project.Topics.Any())
                            {
                                {
                                }
                            }
                        </div>

                            <span class="flex items-center">
                                <span class="w-2.5 h-2.5 rounded-full mr-1"
                                    style="background-color:@project.Language.GetLanguageBackgroundColor()"></span>
                                @project.Language
                            </span>
                            @if (project.StargazersCount > 0)
                            {
                                    </svg>
                                    <span>@project.StargazersCount</span>
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            @for (int i = 0; i < 5; i++)
            {
                    <div class="w-full">
                        <div class="mb-1">
                        </div>
                        <div class="flex flex-wrap gap-2 my-4">
                        </div>
                            <span class="flex items-center">
                            </span>
                                </svg>
                            </span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
