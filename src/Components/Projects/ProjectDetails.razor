@page "/my-profile/project-details/{Id:int}"
@page "/project-details/{Id:int}"

<div class="container mx-auto p-4 max-w-3xl">
    <div class="space-y-6">
        <div class="flex items-center space-x-6">
            <button @onclick="GoToHome"
                class="flex items-center space-x-2 bg-gray-100 dark:bg-[#21262d] text-gray-700 dark:text-[#c9d1d9] border border-gray-200 dark:border-[#30363d] px-3 py-1.5 rounded-md hover:bg-gray-200 dark:hover:bg-[#30363d] transition-colors duration-200">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor">
                </svg>
                <span class="text-sm font-semibold">Back</span>
            </button>
        </div>
        @if (_repoData is not null)
        {
                <div class="flex flex-col md:flex-row justify-between items-start mb-3">
                    <div class="flex shrink-0 space-x-2">
                        @if (!string.IsNullOrWhiteSpace(_repoData.Homepage))
                        {
                            <a href="@_repoData.Homepage" target="_blank" rel="noopener noreferrer"
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                    <polyline points="15 3 21 3 21 9" />
                                    <line x1="10" y1="14" x2="21" y2="3" />
                                </svg>
                                <span class="text-xs font-medium">Visit Site</span>
                            </a>
                        }
                        <a href="@_repoData.HtmlUrl" target="_blank" rel="noopener noreferrer"
                            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor">
                            </svg>
                            <span class="text-xs font-medium">View on GitHub</span>
                        </a>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-3 my-3">
                    </div>
                    </div>
                    </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 my-3">
                        <div class="space-y-1">
                            <div class="flex justify-between">
                                    <span class="text-sm">@_repoData.Language</span>
                                </span>
                            </div>
                            <div class="flex justify-between">
                            </div>
                            <div class="flex justify-between">
                            </div>
                            <div class="flex justify-between">
                            </div>
                        </div>
                    </div>

                        <div class="space-y-2">
                            <div class="flex items-center text-sm">
                            </div>
                            <div class="flex items-center text-sm">
                            </div>
                            <div class="flex items-center text-sm">
                            </div>
                        </div>
                    </div>
                </div>

                <LanguagesUsed RepoName="@_repoData.Name" />

                <CodeFrequencyChart RepoName="@_repoData.Name" />

                <ActivityTimeline RepoName="@_repoData.Name" />

            </div>
        }
        else
        {
            </div>
        }
    </div>
</div>
