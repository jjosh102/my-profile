@page "/my-profile/project-details/{Id:int}"
@page "/project-details/{Id:int}"

<div class="container mx-auto p-4">
    <div class="space-y-6">
        <div class="flex items-center space-x-6">
            <button @onclick="GoBack"
                class="flex items-center space-x-2 bg-[#21262d] text-[#c9d1d9] border border-[#30363d] px-3 py-1.5 rounded-md hover:bg-[#30363d] transition-colors duration-200">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor">
                    <path fill-rule="evenodd"
                        d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"
                        clip-rule="evenodd" />
                </svg>
                <span class="text-sm font-semibold">Back</span>
            </button>
            <h1 class="text-2xl font-semibold text-[#c9d1d9]">Repository Status</h1>
        </div>
        @if (_repoData is not null)
        {
            <div class="bg-[#161b22] border border-[#30363d] shadow rounded-lg p-4">
                <div class="flex flex-col md:flex-row justify-between items-start mb-3">
                    <!-- Title -->
                    <span class="text-lg font-bold text-[#58a6ff] mb-2 md:mb-0">@_repoData.Name</span>

                    <!-- Buttons -->
                    <div class="flex shrink-0 space-x-2">
                        @if (!string.IsNullOrWhiteSpace(_repoData.Homepage))
                        {
                            <a href="@_repoData.Homepage" target="_blank" rel="noopener noreferrer"
                                class="flex items-center space-x-2 bg-[#238636] text-white px-3 py-1.5 rounded-md hover:bg-[#2ea043] transition-colors duration-200">
                                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                    <polyline points="15 3 21 3 21 9" />
                                    <line x1="10" y1="14" x2="21" y2="3" />
                                </svg>
                                <span class="text-xs font-medium">Visit Site</span>
                            </a>
                        }
                        <a href="@_repoData.HtmlUrl" target="_blank" rel="noopener noreferrer"
                            class="flex items-center space-x-2 bg-[#21262d] text-[#c9d1d9] border border-[#30363d] px-3 py-1.5 rounded-md hover:bg-[#30363d] transition-colors duration-200">
                            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor">
                                <path
                                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
                            </svg>
                            <span class="text-xs font-medium">View on GitHub</span>
                        </a>
                    </div>
                </div>
                <div class="border-t border-[#30363d] mb-4"></div>
                <p class="text-gray-400 text-sm">@_repoData.Description</p>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-3 my-3">
                    <div class="bg-[#0D1117] border border-[#30363d] shadow rounded-lg p-3 text-center">
                        <h3 class="text-md font-semibold text-[#c9d1d9]">Stargazers</h3>
                        <p class="text-gray-400 text-xl mt-1">@_repoData.StargazersCount</p>
                    </div>
                    <div class="bg-[#0D1117] border border-[#30363d] shadow rounded-lg p-3 text-center">
                        <h3 class="text-md font-semibold text-[#c9d1d9]">Forks</h3>
                        <p class="text-gray-400 text-xl mt-1">@_repoData.ForksCount</p>
                    </div>
                    <div class="bg-[#0D1117] border border-[#30363d] shadow rounded-lg p-3 text-center">
                        <h3 class="text-md font-semibold text-[#c9d1d9]">Watchers</h3>
                        <p class="text-gray-400 text-xl mt-1">@_repoData.WatchersCount</p>
                    </div>
                    <div class="bg-[#0D1117] border border-[#30363d] shadow rounded-lg p-3 text-center">
                        <h3 class="text-md font-semibold text-[#c9d1d9]">Open Issues</h3>
                        <p class="text-gray-400 text-xl mt-1">@_repoData.OpenIssuesCount</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 my-3">
                    <div class="bg-[#0D1117] border border-[#30363d] shadow rounded-lg p-3">
                        <h3 class="text-lg font-semibold text-[#c9d1d9] mb-3">Repository Details</h3>
                        <div class="space-y-1">
                            <div class="flex justify-between">
                                <span class="text-sm text-gray-400">Primary Language</span>
                                <span class="flex items-center text-[#c9d1d9] space-x-2">
                                    <span class="w-2 h-2 rounded-full mr-1"
                                        style="background-color:@_repoData.Language.GetLanguageBackgroundColor()"></span>
                                    <span class="text-sm">@_repoData.Language</span>
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-sm text-gray-400">Default Branch</span>
                                <span class="text-sm text-[#c9d1d9]">@_repoData.DefaultBranch</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-sm text-gray-400">License</span>
                                <span class="text-sm text-[#c9d1d9]">@(_repoData.License?.Name ?? "Not specified")</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-sm text-gray-400">Size</span>
                                <span class="text-sm text-[#c9d1d9]">@_repoData.Size.FormatSize()</span>
                            </div>
                        </div>
                    </div>

                    <div class="bg-[#0D1117] border border-[#30363d] shadow rounded-lg p-3">
                        <h3 class="text-lg font-semibold text-[#c9d1d9] mb-3">Activity Timeline</h3>
                        <div class="space-y-2">
                            <div class="flex items-center text-sm">
                                <span class="w-2 h-2 rounded-full bg-[#c9d1d9] mr-2"></span>
                                <span class="text-gray-400">Created on @_repoData.CreatedAt.FormatDate()</span>
                            </div>
                            <div class="flex items-center text-sm">
                                <span class="w-2 h-2 rounded-full bg-[#c9d1d9] mr-2"></span>
                                <span class="text-gray-400">Last updated @_repoData.UpdatedAt.FormatTimeAgo()</span>
                            </div>
                            <div class="flex items-center text-sm">
                                <span class="w-2 h-2 rounded-full bg-[#c9d1d9] mr-2"></span>
                                <span class="text-gray-400">Last pushed @_repoData.PushedAt.FormatTimeAgo()</span>
                            </div>
                        </div>
                    </div>
                </div>

                 <LanguagesUsed RepoName="@_repoData.Name" />
             
                <div class="my-4">
                    <h3 class="text-sm font-bold text-[#c9d1d9]">Repository Stats</h3>
                    <div class="mt-4">
                        <canvas id="repoStatsChart" width="400" height="200"></canvas>
                    </div>
                </div>

                <div class="my-4">
                    <ActivityTimeline RepoName="@_repoData.Name" />
                </div>
            </div>
        }
        else
        {
            <div class="p-4 text-center">
                <div class="bg-[#161b22] border border-[#30363d] shadow rounded-lg p-4">
                    <p class="text-[#cf222e]">Failed to load repository data.</p>
                </div>
            </div>
        }
    </div>
</div>
