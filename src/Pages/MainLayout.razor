            <hr class="my-3 mx-4 border-t-2 border-gray-300 dark:border-gray-600" />
        </div>
    </footer>
</div>

@code {
    private GithubLastCommit? githubLastCommit;
    private string lastCommitUrl = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var lastCommitResult = await GitHubClient.GetRepoLastCommit(GithubConstants.GetRepos.Name);
        if (lastCommitResult.IsSuccess && lastCommitResult.Value is not null)
        {
            githubLastCommit = lastCommitResult.Value;
            lastCommitUrl = $"{GithubConstants.GetLastCommit.Url}{githubLastCommit.Object.Sha}";
        }
    }
}
