<MudAppBar Elevation="0">
    <MudContainer MaxWidth="MaxWidth.Medium">
        <div class="d-flex align-center" Elevation="1">
            @if (!IsProject)
            {
                <MudText Typo="Typo.h6">Projects</MudText>
            }
            <MudSpacer />
            @if (IsProject)
            {
                <MudTooltip Text="Projects" Color="Color.Primary" Placement="Placement.Bottom">
                    <MudIconButton Href="projects"
                                   Icon="@Icons.Custom.Uncategorized.Folder" Color="Color.Primary" />
                </MudTooltip>
            }
            else
            {
                <MudTooltip Text="Home" Color="Color.Primary" Placement="Placement.Bottom">
                    <MudIconButton Href="/"
                                   Icon="@Icons.Material.Filled.Home" Color="Color.Primary" />
                </MudTooltip>
            }
            <MudTooltip Text="GitHub" Color="Color.Primary" Placement="Placement.Bottom">
                <MudIconButton Href="https://github.com/obaki102" Icon="@Icons.Custom.Brands.GitHub"
                               Color="Color.Primary" />
            </MudTooltip>
            <MudTooltip Text="Email Address" Color="Color.Primary" Placement="Placement.Bottom">
                <MudIconButton Href="mailto:joshuajpiluden@gmail.com" Icon="@Icons.Custom.Brands.Google"
                               Color="Color.Primary" />
            </MudTooltip>
            <MudTooltip Text="Linkedin" Color="Color.Primary" Placement="Placement.Bottom">
                <MudIconButton Href="https://www.linkedin.com/in/joshua-j-piluden-b06798110"
                               Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Primary" />
            </MudTooltip>
        </div>
        <div class="d-flex align-end" Elevation="1">
            <MudSpacer />
            <div class="mr-3 mt-1" style="width:165px">
                <MudDivider FlexItem="false" />
            </div>
        </div>
    </MudContainer>
</MudAppBar>

@code {
    [Parameter] public bool IsProject { get; set; } = false;

}
